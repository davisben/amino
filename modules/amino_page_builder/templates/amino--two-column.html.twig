{#
/**
 * @file
 * Default two column layout template for Amino Page Builder.
 *
 * Available variables:
 * - content: The content for this layout.
 * - settings: Settings for this layout.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'amino-layout',
    'amino--two-column',
  ]
%}

{% set classes = classes|merge([settings.additional_classes]) %}

{% if settings.full_width %}
  {% set classes = classes|merge(['amino-layout--fullwidth']) %}
{% endif %}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.first %}
      <div {{ region_attributes.first.addClass('amino-layout-region', 'region--first') }}>
        {{ content.first }}
      </div>
    {% endif %}

    {% if content.second %}
      <div {{ region_attributes.second.addClass('amino-layout-region', 'region--second') }}>
        {{ content.second }}
      </div>
    {% endif %}
  </div>
{% endif %}
